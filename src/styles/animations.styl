@require 'constants.styl'

animation-roll-down(start-height=0, duration=2s, padding=0)
    opacity 0
    max-height start-height
    padding-top 0
    padding-bottom 0
    animation animation-roll-down duration ease forwards
    @keyframes animation-roll-down
        0%
        10%
            opacity 1
        99%
            opacity 1
            padding padding
            max-height 3000px
        100%
            opacity 1
            padding padding
            max-height unset

animation-index-delay(delay=0.05s)
    animation-delay 'calc(var(--animation-index) * %s)' % delay
animation-float(time=0.5s, translateX=0, translateY=-20px)
    opacity 0
    animation float time ease forwards
    @keyframes float
        from
            opacity 0
            transform translate(translateX, translateY)
        to
            opacity 1
            transform translateY(0, 0)
